@model IEnumerable<Shop.Models.Realestate.RealEstateViewModel>


<link rel="stylesheet" href="~/css/StyleForRealEstate11.1.23.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/StyleForRealEstateNav.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/TabelForRealEstate.css" asp-append-version="true" />


<div class="neon">
    <div class="green">Realestate we are</div>
    <div class="red">Opened</div>
</div>





@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="realestate" class="btn btn-outline-primary">Create</a>
</div>


<form method="post">
    <table style="color:white;" class=" table table-hover">
        
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Address</th>
                <th scope="col">SizeSqrM</th>
                <th scope="col">RoomCount</th>
                <th scope="col">Floor</th>
                
                

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var realestate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@realestate.Address</td>
                    <td>@realestate.SizeSqrM</td>
                    <td>@realestate.RoomCount</td>
                    <td>@realestate.Floor</td>
                    
                   
                    <td>
                        <a asp-action="details" asp-controller="realestate" asp-route-id="@realestate.Id" class="btn btn-outline-info">Details</a>
                        <a asp-action="update" asp-controller="realestate" asp-route-id="@realestate.Id" class="btn btn-outline-primary">Update</a>
                        <a asp-action="delete" asp-controller="realestate" asp-route-id="@realestate.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                rowNumber += 1;
            }

        </tbody>
    </table>
</form>



