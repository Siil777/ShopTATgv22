@model IEnumerable<Shop.Models.Spaceship.SpaeshipsIndexViewModel>

@* <link rel="stylesheet" href="~/css/NavMenuSpaceShop.css" asp-append-version="true" /> *@
<link rel="stylesheet" href="~/css/SpaceshopSpacePage.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/SpaceShopInscriptionSpaceShop.css"asp-append-version="true" />

<div class="neon">
    <div class="green">Space shop</div>
    
</div>

@{
    int rowNumber = 1;
}

<div class="btn-for-create-space-ship-page-table">
    <a asp-action="create" asp-controller="spaceships" style="background-color:#999966; margin-bottom: 10px;" class="btn btn-primary">Create</a>
</div>




<form method="post"> 
    <table class=" table table-hover">
    
        <thead>
            <tr class="table-dark">
                <th scope="col">Nr</th> 
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passanger</th>
                <th scope="col">Engin Power</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
            @foreach (var spaceship in Model)
            {
                <tr class="table-dark">
                    <td>@rowNumber</td>
                    <td>@spaceship.Name</td>
                    <td>@spaceship.Type</td>
                    <td>@spaceship.Passangers</td>
                    <td>@spaceship.EnginPower</td>
                    <td>
                        
                            <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="background-color:#e9d362; color:brown; margin-right: 8px;" class="btn btn-info">Details</a>
                            <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="background-color:transparent; border: solid 1px; margin-right: 10px;" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="background-color:transparent; border: solid 1px; margin-top: 10px;"  class="btn btn-danger">Delete</a>
                       

                    </td>
                </tr>
                rowNumber += 1;
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</form>