@model Shop.Models.ChackNorris.ChackNorrisViewModel

<link rel="stylesheet" href="~/css/NavMenuForNorris.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Chuck Norris Joke library";
}

<div class="container">
    <h2>Welcome to Chuck Norris Joke library!</h2>
    <p>Click the button below to get a Chuck Norris joke.</p>

    <form asp-controller="ChackNorris" asp-action="ChackJoke" method="post">
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Get Chuck Norris Joke</button>
            </div>
        </div>
    </form>
</div>








